<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DisBot Logs</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #0e0e11;
        font-family: "Segoe UI", sans-serif;
        color: #e8e8e8;
      }

      .container {
        max-width: 98%;
      }

      h1 {
        font-weight: 600;
      }

      .log-card {
        background-color: #1a1a1f;
        border: 1px solid #333;
        border-radius: 14px;
        padding: 1.5rem;
        margin-bottom: 1rem;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.2);
      }

      .log-header {
        font-size: 1.1rem;
        font-weight: 500;
        margin-bottom: 1rem;
      }

      .log-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 0.5rem;
      }

      .log-item {
        display: flex;
        flex-direction: column;
      }

      .log-label {
        font-size: 0.75rem;
        color: #999;
      }

      .log-value {
        font-size: 0.9rem;
        color: #f1f1f1;
        word-break: break-word;
      }

      .badge {
        padding: 0.4rem 0.6rem;
        border-radius: 0.4rem;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        display: inline-block;
      }

      .badge-error {
        background-color: #dc3545;
      }

      .badge-warn {
        background-color: #ffc107;
        color: #000;
      }

      .badge-info {
        background-color: #0dcaf0;
        color: #000;
      }

      .badge-debug {
        background-color: #6c757d;
      }

      .btn-info {
        background-color: #0dcaf0;
        border: none;
      }

      .btn-info:hover {
        background-color: #31d2f2;
      }

      code {
        background: #25252a;
        padding: 0.2rem 0.4rem;
        border-radius: 5px;
      }

      .card-empty {
        background-color: #1a1a1f;
        border: 1px solid #333;
        border-radius: 14px;
        padding: 2rem;
        text-align: center;
        margin-top: 2rem;
      }
    </style>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const userPassword = prompt("üîí Enter your password:");

        if (userPassword) {
          fetch("/auth", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ password: userPassword }),
          })
            .then((response) => response.json())
            .then((data) => {
              const logs = data.logs || [];
              if (data.success) {
                if (logs.length === 0) {
                  document.querySelector(".container").innerHTML = `
                  <div class="card-empty
                    <h5 class="mb-3">No Logs found</h5>
                    <p>
                      It seems there are no logs available at the moment. Please check back later or ensure that logging is enabled in your bot configuration.
                    </p>
                  </div>
                `;
                } else {
                  const logCards = logs
                    .map(
                      (log) => `
                  <div class="log-card">
                    <div class="log-header">
                      <code>${log.UUID}</code>
                    </div>
                    <div class="log-grid">
                      <div class="log-item">
                        <span class="log-label">Guild</span>
                        <span class="log-value">${log.GuildId}</span>
                      </div>
                      <div class="log-item">
                        <span class="log-label">User</span>
                        <span class="log-value">${log.UserId}</span>
                      </div>
                      <div class="log-item">
                        <span class="log-label">Channel</span>
                        <span class="log-value">${log.ChannelId}</span>
                      </div>
                      <div class="log-item">
                        <span class="log-label">Message</span>
                        <span class="log-value">${log.MessageId}</span>
                      </div>
                      <div class="log-item">
                        <span class="log-label">Timestamp</span>
                        <span class="log-value">${new Date(log.Timestamp).toLocaleString()}</span>
                      </div>
                      <div class="log-item">
                        <span class="log-label">Level</span>
                        <span class="log-value">
                          <span class="badge ${
                            log.Level === "error"
                              ? "badge-error"
                              : log.Level === "warn"
                                ? "badge-warn"
                                : log.Level === "debug"
                                  ? "badge-debug"
                                  : "badge-info"
                          }">
                            ${log.Level}
                          </span>
                        </span>
                      </div>
                      <div class="log-item">
                        <span class="log-label">Label</span>
                        <span class="log-value">${log.Label}</span>
                      </div>
                      <div class="log-item">
                        <span class="log-label">Bot</span>
                        <span class="log-value">${log.BotType}</span>
                      </div>
                      <div class="log-item">
                        <span class="log-label">Action</span>
                        <span class="log-value">${log.Action}</span>
                      </div>
                      <div class="log-item" style="grid-column: 1 / -1;">
                        <span class="log-label">Message</span>
                        <span class="log-value"><code>${log.Message.length > 80 ? log.Message.substring(0, 80) + "..." : log.Message}</code></span>
                      </div>
                    </div>
                    <div class="mt-3 text-end">
                      <a href="/log/${log.UUID}" class="btn btn-info btn-sm">‚öôÔ∏è Details</a>
                    </div>
                  </div>
                `
                    )
                    .join("");
                  document.querySelector(".container").innerHTML = logCards;
                }
              } else {
                console.error("Authentication failed:", data.message);
                alert("‚ùå Invalid password. Please try again.");
                window.location.href = "/";
              }
            })
            .catch((error) => {
              console.error("Error during authentication:", error);
              alert("‚ùå An error occurred during authentication.");
              window.location.href = "/";
            });
        } else {
          alert("‚ùå Password is required to access logs.");
          window.location.href = "/";
        }
      });
    </script>
  </head>
  <body>
    <div class="container py-5">
      <div class="card-empty">
        <h5 class="mb-3">No Logs found</h5>
        <p>
          It seems there are no logs available at the moment. Please check back
          later or ensure that logging is enabled in your bot configuration.
        </p>
      </div>
    </div>
  </body>
</html>
